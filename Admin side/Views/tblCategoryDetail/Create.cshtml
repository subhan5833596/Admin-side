@model Admin_side.Models.tblCategoryDetail

@{
    ViewBag.Title = "Create";
    ViewBag.Category = 1;
}

<h2>ADD INVENTORY</h2>


@using (Html.BeginForm("Create", "tblCategoryDetail", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.PID, "PID", new { @class = "control-label col-md-2" })
